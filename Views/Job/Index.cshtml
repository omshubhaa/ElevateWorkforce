@model IEnumerable<Job>

<h2>Available Jobs</h2>

@foreach (var job in Model)
{
    <div class="job-card">
        <h3>@job.Title</h3>
        <p><strong>Company:</strong> @job.Company</p>
        <p><strong>Location:</strong> @job.Location</p>
        <p><strong>Type:</strong> @job.JobType</p>
        <p><strong>Salary:</strong> $@job.Salary</p>
        <p><strong>Posted:</strong> @job.PostedDate.ToShortDateString()</p>

        <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-primary">View Details</a>
        <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@job.Id" class="btn btn-danger">Delete</a>
    </div>
}

<a asp-action="Create" class="btn btn-success">Post a Job</a>
